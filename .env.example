# HP-Pulse Scraper Configuration
# Copy this file to .env and customize for your deployment

# Database
DATABASE_PATH=hp_pulse.db

# Scraping Intervals (in hours)
TENDER_INTERVAL=1
NEWS_INTERVAL=6
DIRECTORY_INTERVAL=24

# Rate Limiting
REQUESTS_PER_SECOND=1
REQUEST_TIMEOUT=15

# User Agent (add your contact email)
USER_AGENT=HP-Pulse-Research-Bot/1.0 (HPCL Direct Sales Research; compliance@hpcl.co.in)

# Logging
LOG_TO_FILE=false
LOG_FILE_PATH=scraper.log
LOG_LEVEL=INFO
